<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recycler_item_number_parent"
            android:background="@color/background_floating_material_light"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="14dp"/>/>

        <TextView
            android:id="@+id/providerDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/recycler_item_arrow_parent"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/down_arrow_selected" />

    </RelativeLayout>



</LinearLayout>