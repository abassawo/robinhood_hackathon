<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b9ea7f"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/languages"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp"
        android:id="@+id/prompt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:entries="@array/language"
        android:prompt="@string/languages"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/LanguageSelect"
        android:layout_below="@+id/prompt"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:gravity="center"
        android:id="@+id/zipcodeEditText"
        android:layout_below="@+id/LanguageSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:hint="Zip Code"/>


    <ImageView
        android:layout_width="wrap_content"
        android:onClick="missionIntent"
        android:layout_height="wrap_content"
        android:id="@+id/FeHomeLogo"
        android:background="@drawable/fe_nyc_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:onClick="submitClick"
        android:text="Submit"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/FeHomeLogo"
        android:layout_alignRight="@+id/FeHomeLogo"
        android:layout_alignEnd="@+id/FeHomeLogo"
        android:background="@drawable/custom_button"
        android:textAllCaps="false"/>


</RelativeLayout>